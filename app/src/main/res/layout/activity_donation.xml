<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".donation">

    <!-- Spinner for selecting city -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:weightSum="3"
        >

        <ImageView
            android:onClick="back"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:layout_weight="0.3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Donation"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="2"/>
        <ImageView
            android:onClick="searchfunc"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/baseline_history_24"
            android:layout_weight="0.7"/>



    </LinearLayout>

    <TextView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Today, we're supporting Madrasha orphan children. Your donation means education, shelter, and hope. Please join us in making a difference. Thank you."
        />
    <TextView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Bkash Number: 01641378317"
        />


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

    <!-- EditTexts for donation information -->
    <EditText
        android:layout_margin="10dp"
        android:id="@+id/editTextUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_with_radius"
        android:padding="20dp"
        android:hint="User Name" />

    <EditText
        android:layout_margin="10dp"
        android:id="@+id/editTextPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextUserName"
        android:background="@drawable/border_with_radius"
        android:padding="20dp"
        android:hint="Phone Number"
        android:inputType="phone" />

    <EditText
        android:layout_margin="10dp"
        android:id="@+id/editTextTransactionId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPhoneNumber"
        android:background="@drawable/border_with_radius"
        android:padding="20dp"
        android:hint="Transaction ID" />

    <!-- Button to submit donation -->
    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTransactionId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Submit"
        />

    </LinearLayout>


</LinearLayout>
