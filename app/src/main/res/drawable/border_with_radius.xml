<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item> <!-- Background -->
        <shape>
            <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
        </shape>
    </item>
    <item> <!-- Border -->
        <shape>
            <stroke android:width="1dp" android:color="@color/cardview_dark_background"/> <!-- 2dp black border -->
            <corners android:radius="10dp"/> <!-- Rounded corners with a radius of 5dp -->
        </shape>
    </item>
</layer-list>
